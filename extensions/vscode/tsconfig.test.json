{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "out/test",
    "strict": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "mocha", "vscode"]
  },
  "include": ["src/test/**/*"],
  "exclude": ["node_modules", "out"]
}