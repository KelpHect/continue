{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2021"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmitOnError": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./**/*.ts", "**/*.js", "./**/*.d.ts"],
  "exclude": ["test", "dist", "__mocks__", "**/*.test.ts", "**/*.spec.ts", "**/*.vitest.ts", "**/test/**/*", "vitest.config.ts", "**/*.test.skip.ts", "../eslint.config.js", "eslint.config.js"]
}
